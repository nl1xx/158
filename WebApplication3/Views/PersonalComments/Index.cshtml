@model IEnumerable<WebApplication3.Models.PersonalComments>

@{
    ViewBag.Title = "Index";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.personalComment)</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.ActionLink(item.personalComment,"Index","PersonalComments")
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.personalComment }) |
        @Html.ActionLink("Details", "Details", new { id = item.personalComment }) |
